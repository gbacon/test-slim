#! /usr/bin/env perl

use strict;
use warnings;

BEGIN {
  open STDERR, "| tee /tmp/slim.err 1>&2" or die "$0: open: $!\n";
  open STDOUT, "| tee /tmp/slim.out 1>&2" or die "$0: open: $!\n";
}

use Test::Slim::Server;

sub usage { "Usage: $0 port\n" }

die usage unless @ARGV == 1;
my $port = shift;

Test::Slim::Server->new->run($port);
